<div class="container">
    {{#each posts as |post| }}
    <div class="card post">
        <div class="title">
            <h2>
                <a href="/post/{{post.id}}">{{post.title}}</a>
            </h2>
            <h4>Posted by {{post.user.name}} on {{post.date_created}}</h4>
        </div>
        <div class="content">
            <p>
                {{post.content}}
            </p>
        </div>
    </div>
    {{/each}}
</div>